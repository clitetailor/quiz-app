.form-result
    border: none
    box-shadow: 0px 5px 5px 0px rgba(0, 0, 0, 0.5)
    box-sizing: border-box;
    width: 400px
    height: 280px
    margin: 200px auto 0
    background-color: #6495ED
    border-radius: 5px
           
    .score
        text-align: center
        font-size: 40px
        margin-left: auto
        color: red
        width: 50%
        height: 30%
        margin: auto
        
    .label
        font-size: 23px
        color: #FFCC33
        margin-left: 20px

    .share
        background-color: #9400D3
        color: #00008B
        height: 50px
        width: 80px
        margin-top: 20px
        margin-left: 165px
        border-radius: 10px

    .text
        font-size: 23px
        font-family: "Open Sans"
        font-style: oblique