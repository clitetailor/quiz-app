.margin-bottom
  margin-bottom 20px

.line, .line-group
  margin-bottom 15px

.line-group
  .line
    margin-bottom 8px

.line.align-right
  display flex
  justify-content flex-end

.two-column
  display flex

  .column-left
    flex 1 1 auto

  .column-right
    flex 0 0 auto

.outer-wrapper
  display flex

  margin 0
  padding 0

  width 100%
  height 100%

  overflow hidden

  .display
    flex 0 0 auto
    height 100%
    width 50%

    padding 20px

    background cadetblue

    overflow-y auto

    .paper
      display block

      max-width 600px

      background white

      border-radius 3px

      .piece
        display block
        padding 20px

        cursor pointer
        border 2px solid transparent

        border-radius 3px

        .text
          padding 10px 15px
          background #eee
          min-height 30px

          font-family Arial, Helvetica, sans-serif
          font-size 14px

        .question-text
          border-left 3px solid gray

        .answer-text
          border-left 3px solid coral

        .answer-text.correct
          border-left 3px solid yellowgreen

        &:hover
          background #eee

          .text
            background white

  .editor
    flex 0 0 auto
    height 100%
    width 50%

    padding 20px

    background white
    overflow-y auto
    overflow-x hidden

    textarea, input
      width 100%
      padding 10px 15px

      outline none
      border none
      background #eee

      resize vertical

      font-family Arial, Helvetica, sans-serif

    .question-input
      border-left 3px solid gray

    .answer-input
      border-left 3px solid coral

    .answer-input.correct
      border-left 3px solid yellowgreen

    .tag
      padding 5px 8px
      margin-left 5px

      color white

      font-family Arial, Helvetica, sans-serif
      font-size 12px

      background coral
      cursor pointer

      user-select none

    .tag.correct
      background yellowgreen
      cursor pointer

    h3.title
      color #333
      font-family Cambria, Cochin, Georgia, Times, Times New Roman, serif
